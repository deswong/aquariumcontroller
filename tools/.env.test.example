# Test Environment Configuration
# Copy this to .env.test and configure for your test database

# MQTT Broker (not needed for database tests)
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USER=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=aquarium

# Test Database Configuration
# IMPORTANT: Use a separate test database, NOT your production database!
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_NAME=aquarium_test
TEST_DB_USER=aquarium
TEST_DB_PASSWORD=

# MariaDB Configuration (fallback if TEST_* not set)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=aquarium_test
DB_USER=aquarium
DB_PASSWORD=
